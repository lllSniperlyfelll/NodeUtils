{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",

    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,

    "importHelpers": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "skipLibCheck": true
  },
  "exclude": ["./node_modules"]
}
